<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".locker.core.LockerDialog"
    android:orientation="vertical">
    <!--android:background="@drawable/sample_background"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/layout_clock"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp" >

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock2"
                android:textSize="50sp"
                android:textIsSelectable="false"
                android:focusableInTouchMode="false"
                android:textColor="#ffffff"/>
            <TextClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textClock1"
                android:textSize="25sp"
                android:textIsSelectable="false"
                android:focusableInTouchMode="false"
                android:textColor="#ffffff"
                android:layout_marginEnd="5dp"
                android:format24Hour="M월 dd일 (E)"
                android:format12Hour="M월 dd일 (E)"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/weatherText"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:drawablePadding="5dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/layout_clock" />

        <LinearLayout
            android:id="@+id/layout_calendar"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherText"

            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/calendarDateText"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:id="@+id/calendarTitleText"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_call_buttons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACCEPT CALL"
                android:id="@+id/button_call_accept" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISMISS CALL"
                android:id="@+id/button_call_dismiss" />
        </LinearLayout>

        <ImageView
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/text_caller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_call_buttons"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="#cccccc"
            android:text="◀ 잠금해제"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#cccccc"
            android:text="의료정보 | 진통타이머 ▶"/>
    </RelativeLayout>

</LinearLayout>
